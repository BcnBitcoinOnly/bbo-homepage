# Deployment Configuration
# Copy this file to .env and fill in your deployment details

# Remote server hostname or IP address
DEPLOY_HOST=example.com

# SSH username for remote server
DEPLOY_USER=username

# Remote path where the webserver is serving files from
# This should be the absolute path to your web root directory
DEPLOY_PATH=/var/www/html

# Optional: SSH port (if not using default port 22)
# Uncomment and set if your SSH server uses a different port
# DEPLOY_SSH_PORT=2222
